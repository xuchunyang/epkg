{
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "handle": "filesystem" },
    { "src": "/([^/.]+)", "dest": "/api/show?name=$1" },
    { "src": "/favicon.ico", "status": 404 },
    { "src": "/robots.txt", "status": 404 },
    { "src": "/feed.xml", "status": 404 },
    { "src": "/manifest.json", "status": 404 },
    { "src": "/([^/]+).json", "dest": "/api/info?name=$1" }
  ]
}
